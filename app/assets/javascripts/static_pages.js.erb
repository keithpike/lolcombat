var myApp = angular.module('myApp', ['ui.router', 'ngAnimate', 'ngResource']);

myApp.config(function($locationProvider, $stateProvider, $urlRouterProvider){
	
	$locationProvider.html5Mode({
		enabled: true,
		requireBase: false
	});

	$urlRouterProvider.otherwise('/');

	$stateProvider

	// main page
		.state('/', {
			abstract: true,
			url: '/',
			views: {
				'': {
					templateUrl: "<%= asset_path('views/main/main.html') %>",
				},
				'navbar@/': {
					templateUrl: "<%= asset_path('views/global/_navbar.html') %>",
				},
				'footer@/': {
					templateUrl: "<%= asset_path('views/global/_footer.html') %>",
				}
			},
    })
	// alternate "pages" of root
		.state('/.home', {
				url: '',
				templateUrl: "<%= asset_path('views/global/_home.html') %>"
		})


	// new template page champions
		.state('/champions', {
			url: '/champions',
			views: {
				'': {
					templateUrl: "<%= asset_path('views/main/champions.html') %>",
				},
				'champions@/champions': {
					templateUrl: "<%= asset_path('views/main/_champions.html') %>",
					controller: 'ChampionsController'
				},
				'navbar@/champions': {
					templateUrl: "<%= asset_path('views/global/_navbar.html') %>",
				},
				'footer@/champions': {
					templateUrl: "<%= asset_path('views/global/_footer.html') %>",
				}
			}
		})
		.state('/items', {
			url: '/items',
			
			views: {
				'': {
					templateUrl: "<%= asset_path('views/main/items.html') %>",
					controller: "ItemsController"
				},
				'items@/items': {
